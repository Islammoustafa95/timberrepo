<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="theme_dark_footer" inherit_id="website.layout" name="Footer biz-emart-default One" active="False">
        
        <xpath expr="//div[@id='footer']" position="replace">  
            <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
                <section class="pt64 pb16">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-5 text-center text-md-start">
                                <div class="footer-logo">
                                    <img class="img img-fluid" src="/theme_emart_plant/static/src/img/theme-biz-emart-shop-logo-white.png"/>
                                </div>
                                <div class="pt-4 mt-2 pb-3">
                                    <a class="btn btn-link text-decoration-none px-0 footer_text_color" href="#"> <i class="fa fa-phone me-2"/><span t-out="res_company.phone"/></a>
                                </div>
                                <p class="footer_text_color"><span t-out="res_company.street"/>,<br/><span t-out="res_company.city"/>,<span t-out="res_company.zip"/></p>
                            </div>
                            <div class="col-lg-7 text-center text-md-start">
                                <div class="container">
                                    <div class="row">                                       
                                        <div class="col-md-4 my-3">
                                            <div class="footer-links">
                                                <ul class="nav d-block">
                                                    <li class="nav-item">
                                                        <p class="text-900 pb-3"><b>Plants By Name</b></p>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">Money Plants</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">Jade Plants</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">Syngonium</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">Lily Plant</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">Snake Plant</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>

                                        <div class="col-md-4 my-3">
                                            <div class="footer-links">
                                                <ul class="nav d-block">
                                                    <li class="nav-item">
                                                        <p class="text-900 pb-3"><b>Pages</b></p>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">Home</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">Contact Us</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">About Us</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">Policy</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">FAQ</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>

                                        <div class="col-md-4 my-3">
                                            <div class="footer-links">
                                                <ul class="nav d-block">
                                                    <li class="nav-item">
                                                        <p class="text-900 pb-3"><b>How can we help</b></p>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">Privacy Policy</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">Terms And Condition</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link txet-decoration-none px-0">FAQ</a>
                                                    </li>                                                  
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>              
            </div>
        </xpath>

        <xpath expr="//div[hasclass('o_footer_copyright')]" position="attributes">
            <attribute name="t-attf-class" add="bg-transparent o_footer_copyright o_colored_level o_cc o_dirty" separator=" "/>
        </xpath>

        <xpath expr="//div[hasclass('o_footer_copyright')]//div[hasclass('col-sm')]" position="attributes">
            <attribute name="t-attf-class" add="col-xl-6 d-md-flex align-items-md-center justify-content-md-center justify-content-xl-start text-center" separator=" "/>
        </xpath>

        <xpath expr="//div[hasclass('o_footer_copyright')]//div[hasclass('col-sm')]" position="after">
            <div class="col-xl-6 d-none d-xl-block my-2">
                <div class="footer-right text-center text-xl-end">
                    <div class="s_social_media o_not_editable" data-snippet="s_social_media" data-name="Social Media" contenteditable="false">
                        <a href="/website/social/facebook" class="link mx-2 s_social_media_facebook" target="_blank" aria-label="Facebook">
                            <i class="fa fa-facebook o_editable_media"/>
                        </a>
                        <a href="/website/social/twitter" class="link mx-2 s_social_media_twitter" target="_blank" aria-label="X">
                            <i class="fa fa-twitter o_editable_media"/>
                        </a>
                        <a href="/website/social/linkedin" class="link mx-2 s_social_media_linkedin" target="_blank" aria-label="LinkedIn">
                            <i class="fa fa-linkedin o_editable_media"/>
                        </a>
                        <a href="/website/social/youtube" class="link mx-2 s_social_media_youtube" target="_blank" aria-label="Youtube">
                            <i class="fa fa-youtube-play o_editable_media"/>
                        </a>
                        <a href="/website/social/instagram" class="link mx-2 s_social_media_instagram" target="_blank" aria-label="Instagram">
                            <i class="fa fa-instagram o_editable_media"/>
                        </a>
                        <a href="/website/social/github" class="link mx-2 s_social_media_github" target="_blank" aria-label="Github">
                            <i class="fa fa-github o_editable_media"/>
                        </a>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('o_footer_copyright')]//div[hasclass('col-sm')]" position="before">
            <div class="col-xl-6 d-block d-xl-none text-center my-2">
                <div class="footer-right text-center text-xl-end">
                    <a class="link mx-2 text-decoration-none" t-att-href="website.social_facebook"
                        t-if="website.social_facebook" target="_blank">
                        <i class="fa fa-facebook footer_text_color" />
                    </a>
                    <a class="link mx-2 text-decoration-none" t-att-href="website.social_twitter"
                        t-if="website.social_twitter" target="_blank">
                        <i class="fa fa-twitter footer_text_color" />
                    </a>
                    <a class="link mx-2 text-decoration-none" t-att-href="website.social_instagram"
                        t-if="website.social_instagram" target="_blank">
                        <i class="fa fa-instagram footer_text_color"></i>
                    </a>
                </div>
            </div>
        </xpath>

        
        <xpath expr="//span[hasclass('o_footer_copyright_name')]" position="replace">
            <span class="footer_text_color ">© 2021 | All Right Are Reserved By </span>
            <span class="footer_text_color mx-2" t-field="res_company.name" />
        </xpath>
    </template>
</odoo>