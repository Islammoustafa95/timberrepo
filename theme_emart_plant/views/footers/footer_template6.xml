								</div>
								<div class="col-md-2 mb-3">
									<div class="footer-links">
										<h6 class="title">Quick Links</h6>
										<p><a href="#">Home</a></p>
										<p><a href="#">Contact Us</a></p>
										<p><a href="#">About Us</a></p>
										<p><a href="#">Policy</a></p>
										<p><a href="#">FAQ</a></p>
									</div>
								</div>
								<div class="col-md-4 mb-3">
									<div class="footer-links">
										<h6 class="title">OUR LOCATION</h6>
									</div>
									<div class="footer-image">
										<div class="image">
											<a href="#">
												<img src="/theme_emart_plant/static/src/img/footer-img3.png" class="img img-fluid"/>
											</a>
										</div>
									</div>
									
								</div>
							</div>
						</div>
					</section>
				</section>
			</div>
		</xpath>
		<xpath expr="//div[hasclass('o_footer_copyright')]" position="replace">
			<div t-if="not no_copyright" class="o_footer_copyright o_cc">
				<section class="copyright-section py-4">
					<div class="container">
						<div class="row align-items-center">
							<div class="col-md-7 mb-4 mb-md-0">
								<p class="m-0">Â© 2021 | All Rights Are Reserved By <span t-field="res_company.name" /></p>
							</div>
							<div class="col-md-5">
								<div class="payment-image text-md-end">
									<img src="/theme_emart_plant/static/src/img/payment-footer.png" class="img-fluid"/>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</xpath>
	</template>
</odoo>