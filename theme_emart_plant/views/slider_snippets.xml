<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_slider_snippet_load" inherit_id="website.snippets">
        <xpath expr="//snippets[@id='snippet_structure']" position="before">
            <div id="slider_snippet_menu" class="o_panel">
                
                <snippets class="o_panel_body" string="Dynamic Snippets">

                    <t t-snippet="theme_emart_plant.s_dynamic_config"
