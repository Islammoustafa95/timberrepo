	<!-- Mega menus -->
	<template id="megamenu_snippets_inherited" inherit_id="website.snippet_options">
		<xpath expr="div[@data-js='MegaMenuLayout']//we-select" position="inside">
			<t t-set="_label">bizemarts Menu One</t>
			<we-button t-att-data-select-label="_label" data-select-template="plant_theme_common.mega_menu_one_snippet"
				data-img="/theme_emart_plant/static/description/icon-1.png" t-out="_label" />

			<t t-set="_label">bizemarts Menu Two</t>
			<we-button t-att-data-select-label="_label" data-select-template="plant_theme_common.mega_menu_four_snippet"
				data-img="/theme_emart_plant/static/description/icon-1.png" t-out="_label" />
			
		</xpath>
	</template>

	<!-- Heading tags style options -->
	<template id="heading_style_options" inherit_id="website.snippet_options">
		<xpath expr="//we-input[@data-variable='font-size-base']" position="before">
			<!-- <we-title>Bizople Custom Settings</we-title> -->
			<we-row string="Product Background Color">
				<we-colorpicker
                    class="o_we_sublevel_1"
                    data-select-style="true"
                    data-customize-website-color="" 
                    data-color-type="theme" 
                    data-color="product-bgcolor"
                    data-css-property="background-color"
                    data-color-prefix="bg-"
                    data-variable="product-bgcolor"
                    />
			</we-row>

			<we-row string="H1">
				<we-fontfamilypicker data-variable="h1-font" />
				<we-input data-customize-website-variable="null" data-variable="h1-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
			<we-row string="H2">
				<we-fontfamilypicker data-variable="h2-font" />
				<we-input data-customize-website-variable="null" data-variable="h2-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
			<we-row string="H3">
				<we-fontfamilypicker data-variable="h3-font" />
				<we-input data-customize-website-variable="null" data-variable="h3-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
			<we-row string="H4">
				<we-fontfamilypicker data-variable="h4-font" />
				<we-input data-customize-website-variable="null" data-variable="h4-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
			<we-row string="H5">
				<we-fontfamilypicker data-variable="h5-font" />
				<we-input data-customize-website-variable="null" data-variable="h5-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
			<we-row string="H6">
				<we-fontfamilypicker data-variable="h6-font" />
				<we-input data-customize-website-variable="null" data-variable="h6-font-size" data-unit="px"
					data-save-unit="rem" />
			</we-row>
		</xpath>
	</template>

	<!-- Snippets -->

	<template id="button_style_options" inherit_id="website.snippet_options">
		<xpath expr="//we-select[@data-button='secondary']" position="after">
			<div
				data-selector=".biz_dynamic_product_slider, .oe_multi_category_slider, .bizcommon_category_slider_3, .blog_slider_owl, .brand_slider">
				<we-select string="Sliders Width" data-variable="slider-width">
					<we-button data-select-class="default_style">Default Size</we-button>
					<we-button data-select-class="extended-container">Extended size</we-button>
				</we-select>
			</div>
			<div data-js="config_slider_clone_fix" data-selector="#wrapwrap" data-no-check="true"/>
		</xpath>
	</template>
</odoo>