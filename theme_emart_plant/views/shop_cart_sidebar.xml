<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="bizemart_cart_popover" inherit_id="website_sale.checkout_layout" name="bizemarts Cart Popover">
        <xpath expr="//div[hasclass('alert','alert-info')]" position="replace">
        	<div t-if="not website_sale_order or not website_sale_order.website_order_line" class="empty-cart-button my-3 text-center">
        		<img src="/theme_emart_plant/static/src/img/empty_cart.svg" class="mb32 w-75 img img-fluid"/>
          		<h5 class="text-dark mb-3 fw-light mx-3">Oops! Your cart is empty!</h5>
          		<a class="btn btn-secondary bizople_button" href="/shop">
                   	<span class="ri ri-shopping-cart-line align-middle me-2"/>
                   	<span>Start Shopping</span>
             	</a>
          	</div>
        </xpath>
    </template>

</odoo>