                                <p t-else="" class="alert alert-warning">This product has no valid combination.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-if="error">
        <div class="select-modal-backdrop"></div>
        <div class="select-modal">
            <div class="select-popout">
                <button class="quick_close">
                    <i class="fa fa-close"></i>
                </button>
                <div class="alert alert-warning m-4" t-out="error"/>
            </div>
        </div>
    </t>
</template>
<!-- similar  product popup -->
<template id="get_product_similar_details_template" name="Similar View Details">
        <t t-if="product">
            <t t-set="combination" t-value="product._get_first_possible_combination()"/>
            <t t-set="combination_info" t-value="product._get_combination_info(combination, add_qty=add_qty)"/>
            <t t-set="product_variant" t-value="product.env['product.product'].browse(combination_info['product_id'])"/>
            
            <div class="similar-modal-backdrop"></div>
 
            <div class="similar-modal">
                <div itemscope="itemscope" itemtype="http://schema.org/Product" class="js_sale similar-popout">
                    <button class="similar_close btn p-0"><div class="position-relative close_icon">
                        <i class="ri ri-close-line align-middle text-dark"></i>
                    </div></button>
                    <h4 class="cart-title text-center mt24">
                        <span>Related Products</span>
                    </h4>
                    <div class="container oe_website_sale pt24 pb24" id="product_detail">
                        <div class="" id="product_detail_main" t-att-data-image_width="website.product_page_image_width" t-att-data-image_layout="website.product_page_image_layout">
                            <div t-if="not product" class="empty_cart">
                                no similar
                        </div>
                        <div class="similar-products-list px-md-5">
                            <div class="owl-carousel" id="estore_similar_popup">
                                <t t-foreach="product.alternative_product_ids" t-as="ap">
                                    <div class="similar_product_box">
                                        <div t-attf-class="similar-product-image {{'add_bg_color' if is_view_active('theme_emart_plant.product_background_color') else ''}}">
                                            <a t-attf-href="/shop/#{ap.id}">
                                                <img class="img img-fluid lazyload mx-auto" t-attf-src="/web/image/product.template/#{ap.id}/image_1920"></img>
                                            </a>
                                         
                                            
                                        </div>
                                        <div class="similar-text-box mt-1">
                                            <div class="similar_product_information_text m-0">
                                                <a t-attf-href="/shop/#{ap.id}" class="h6 text-decoration-none product_name">
                                                    <t t-out="ap.name"/>
                                                   
                                                </a>
                                               
                                              
                                            </div>

                                            <div itemprop="description" class="text-o-color-5 mb-1 small product_desc" t-field="ap.description_sale"/>
                                            
                                            <div class="d-flex justify-content-between">
                                                <t t-set="combination_info" t-value="ap._get_combination_info(combination,only_template=True, add_qty=add_qty)"/>
                                                <t t-if="is_view_active('theme_emart_plant.estore_b2b_mode') and request.env.user._is_public()"></t>

                                                <t t-else="">
                                                    <div class="product_price" itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer">
                                                        <span class="mb-0 price" t-if="combination_info['price']" t-out="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                        <del t-attf-class="text-danger ms-1 mb-0 h6 {{'' if combination_info['has_discounted_price'] else 'd-none'}}" style="white-space: nowrap;" t-out="combination_info['list_price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}" />
                                                        <span itemprop="price" style="display:none;" t-out="combination_info['price']" />
                                                        <span itemprop="priceCurrency" style="display:none;" t-out="website.currency_id.name" />
                                                    </div>
                                                    <t t-if="combination_info['has_discounted_price']">
                                                        <t t-set="diff_amount" t-value="round(combination_info['list_price'] - combination_info['price'],2)"/>
                                                        <t t-set="dis_per" t-value="round(diff_amount*100/combination_info['list_price'])"/>
                                                    </t>
                                                </t>
                                                <t t-if="is_view_active('website_sale.product_comment')">
                                                    <t t-call="theme_emart_plant.product_item_stars"/>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                     </div>
                    </div>
                 </div>
            </div>
        </t>
        <t t-if="error">
            <div class="similar-modal-backdrop"></div>
            <div class="similar-modal">
                <div class="similar-popout">
                    <button class="similar_close btn p-0"><div class="position-relative close_icon"></div></button>
                    <div class="alert alert-warning m-4" t-out="error"/>
                </div>
            </div>
        </t>
    </template>

<!-- select variant popup end -->
