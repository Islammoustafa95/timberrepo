	<!-- dynamic config Category templates -->

	<template id="dynamic_config_product_public_category_style_1_grid" name="dynamic config product public category style 1 grid">
		<div class="row">
			<t t-if="item_per_row == 5">
				<t t-set="biz_col_size_int" t-value="20"/>
			</t>
			<t t-else="">
				<t t-set="biz_col_size" t-value="12 / item_per_row"/>
				<t t-set="biz_col_size_int" t-value="int(biz_col_size)"/>
			</t>
			<t t-foreach="records" t-as="category">
				<div t-att-class="'col-lg-%s'%(biz_col_size_int)+' mb-3 col-md-6'">
					<div class="category_box style_1">
						<div class="image text-center">
							<img class="img img-fluid" t-attf-src="/web/image/product.public.category/#{category.id}/image_1920"/>
						</div>
						<div class="info_btn">
							<a class="text-decoration-none text-black" t-attf-href="/shop/category/#{category.id}">
								<h6 class="mb-0"><t t-out="category.name"/></h6>
							</a>
						</div>
					</div>
				</div>
			</t>
		</div>
	</template>

